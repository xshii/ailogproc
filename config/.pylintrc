[MAIN]
# 指定要检查的文件和目录
# py-version = 3.11

[MESSAGES CONTROL]
# 禁用某些检查（可选）
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    W0718,  # broad-exception-caught - 允许捕获 Exception，但要求必须记录日志

# 启用的检查（确保这些不被禁用）
enable=
    W0702,  # bare-except - 禁止裸 except:
    W0706,  # try-except-raise - 检查无用的 try-except-raise
    W0707,  # raise-missing-from - 重新抛出异常时需要 from

# 注意：Pylint 没有直接检查"except 块必须记录日志"的规则
# 建议：在代码审查中确保 except Exception 块都有日志记录

[FORMAT]
# 每行最大字符数
max-line-length=100

[DESIGN]
# 函数/方法的最大语句数（间接限制函数长度）
# 通常 50 行代码约等于 30-35 条语句
max-statements=35

# 函数/方法的最大参数数
max-args=5

# 函数/方法的最大局部变量数
max-locals=15

# 函数/方法的最大分支数
max-branches=12

# 函数/方法的最大返回语句数
max-returns=6

[BASIC]
# 好的变量名模式
good-names=i,j,k,ex,Run,_,f,e

[REPORTS]
# 输出格式
output-format=colorized

# 显示评分
score=yes
